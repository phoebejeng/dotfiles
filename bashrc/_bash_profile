BASH_NEWLINE="\n"
BASH_WHITE="\[\e[1;0m\]"
BASH_GRAY="\[\e[1;30m\]"
BASH_LIGHT_GREEN="\[\e[1;32m\]"
BASH_LIGHT_GRAY="\[\e[0;37m\]"
BASH_YELLOW="\[\e[1;33m\]"
BASH_CYAN="\[\e[1;36m\]"

function parse_git_branch {
    ref=$(git symbolic-ref HEAD 2> /dev/null) || return;
    echo "("${ref#refs/heads/}") ";
}


PS1="\u@${BASH_LIGHT_GREEN}\h${BASH_WHITE} [${BASH_CYAN}\w${BASH_WHITE}] [$(date +%H:%M:%S)] ${BASH_YELLOW}\$(parse_git_branch)${BASH_WHITE}";

export LANG=zh_TW.UTF-8

source ~/.bashrc

